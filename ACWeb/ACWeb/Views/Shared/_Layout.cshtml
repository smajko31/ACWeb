<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Prestige Heating And Air</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="layout">
        <div id="header">
            <img src="https://i.imgur.com/kdZ27We.png" alt="Logo" id="logo-des">
            <a href="./Contact" id="quote"> <b>get a free quote </b></a>
        </div>
        <nav id="navbar">
            <ul>
                <li> @Html.ActionLink("Home", "Home", "Main", null, null)           </li>
                <li> @Html.ActionLink("Services", "Services", "Main", null, null)   </li>
                <li> @Html.ActionLink("Gallery", "Gallery", "Main", null, null)     </li>
                <li> @Html.ActionLink("Contact", "Contact", "Main", null, null)     </li>
            </ul>
        </nav>
    </div>


    @RenderBody()



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Layout/navbar.js")
    @RenderSection("scripts", required: false)
</body>
</html>
